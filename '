interface Skill {
    void use(Character caster, Character target);
}

class Character {
    String name;
    int hp;

    Character(String name, int hp) {
        this.name = name;
        this.hp = hp;
    }

    void printStatus() {
        System.out.println(name + " HP: " + hp);
    }
}

class Player extends Character {
    Player(String name) {
        super(name, 100);
    }
}

class Monster extends Character {
    Monster(String name) {
        super(name, 80);
    }
}

class Fireball implements Skill {
    @Override
    public void use(Character caster, Character target) {
        int damage = 20;
        target.hp -= damage;
        System.out.println(caster.name + "의 파이어볼! " + target.name + "에게 " + damage + " 데미지");
    }
}

class Heal implements Skill {
    @Override
    public void use(Character caster, Character target) {
        int heal = 15;
        target.hp += heal;
        System.out.println(caster.name + "의 힐! " + target.name + " HP +" + heal);
    }
}

public class Main {
    public static void main(String[] args) {
        Player p = new Player("용사");
        Monster m = new Monster("슬라임");

        Skill s1 = new Fireball();
        Skill s2 = new Heal();

        s1.use(p, m);
        s2.use(p, p);
        p.printStatus();
        m.printStatus();
    }
}



import java.util.HashMap;

public class CooldownManager {
    public static void main(String[] args) {
        HashMap<String, Integer> cd = new HashMap<>();

        cd.put("Fireball", 0);
        cd.put("Heal", 0);

        useSkill(cd, "Fireball");  // 1턴
        nextTurn(cd);

        useSkill(cd, "Fireball");  // 2턴
        useSkill(cd, "Heal");      // 2턴
        nextTurn(cd);

        useSkill(cd, "Fireball");  // 3턴

        System.out.println("Fireball: " + cd.get("Fireball"));
        System.out.println("Heal: " + cd.get("Heal"));
    }

    static void useSkill(HashMap<String, Integer> cd, String name) {
        int current = cd.get(name);
        if (current == 0) {
            System.out.println(name + " 사용!");
            if (name.equals("Fireball")) {
                cd.put(name, 2);   // 쿨타임 2턴
            } else if (name.equals("Heal")) {
                cd.put(name, 1);   // 쿨타임 1턴
            }
        } else {
            System.out.println(name + "은(는) 아직 " + current + "턴 남음");
        }
    }

    static void nextTurn(HashMap<String, Integer> cd) {
        for (String key : cd.keySet()) {
            int v = cd.get(key);
            if (v > 0) cd.put(key, v - 1);
        }
        System.out.println("=== 턴 종료 ===");
    }
}


